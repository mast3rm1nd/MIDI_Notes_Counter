<Window x:Class="MIDI_Notes_Counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIDI_Notes_Counter"
        mc:Ignorable="d"
        AllowDrop="True"
        Title="MIDI Notes Counter" Height="350" Width="388" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Drop="Window_Drop">
    <Grid>
        <Label x:Name="label" Content="Just Drag &amp; Drop MIDI file here!" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="NotesStats_TextBox" TextWrapping="Wrap" Margin="10,67,10,10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

    </Grid>
</Window>
